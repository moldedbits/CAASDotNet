
@using CAAS.Models.ViewModels.Home
@model BlogPostViewModel

@{
  ViewData["Title"] = Model.Title;
  Layout = "_Layout";
}

<div class="container-fluid">
    <div class="col-md-9">
        <div class="panel panel-default">
            <div class="panel-body">
                <h2>@Model.Title</h2>
                <hr />
                <p>
                    @Html.Raw(Model.Content)
                </p>
            </div>
            <div class="panel-footer">
                @Model.ModifiedAt
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h5>Author:</h5>
            </div>
            <div class="panel-body">
              @Model.Author?.FirstName @Model.Author?.LastName <br />
              @if (Model.Author != null && Model.Author.Blurb != null & Model.Author.Blurb != "")
	            {
		            <hr />
                @Model.Author?.Blurb 
	            }
            </div>
        </div>
        <div class="panel panel-default">
            <div class="panel-heading">
                <h5>Description:</h5>
            </div>
            <div class="panel-body">
                @Model.Description
            </div>
        </div>
        <div class="panel panel-default">
            <div class="panel-heading">
                <h6>Categories:</h6>
            </div>
            <div class="panel-body">
                @foreach (var cat in Model.Categories)
                {
                  <a class="label label-info" asp-action="CategoryPosts" asp-route-id="@cat.Id">@cat.Name</a><br />
                }
            </div>
        </div>
    </div>
</div>